<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div
      class="main w-full min-h-screen p-10 bg-zinc-900 text-white text-lg font-['serif']"
    >
      <div class="form bg-zinc-900 outline-none">
        <form action="/submit" method="POST">
          <input
            class="block mb-2 bg-zinc-600 outline-none w-full resize-none py-2 px-4 rounded-lg tracking-tighter"
            placeholder="Your file name goes here"
            name="filename"
          />
          <textarea
            class="block mt-2 bg-zinc-600 outline-none w-full resize-none py-2 px-4 rounded-lg tracking-tighter"
            placeholder="The description of the task goes here"
            name="description"
          ></textarea>
          <div
            class="buttons mt-2 text-white bg-blue-800 p-2 rounded-lg text-sm flex justify-between items-center w-[11vw]"
          >
            <button type="submit" class="mr-2">Create File</button>
            <a href="/edit" class="text-white">Edit File</a>
          </div>
        </form>
        <div class="cards mt-[13vh] flex gap-3">
          <% files.forEach((val) => { %>
          <div
            class="card w-[18vw] tracking-tighter bg-zinc-600 p-2 rounded-lg text-wrap break-words"
          >
            <%= val %>
            <br />
            <a href="/show/<%= val %>" class="text-sm text-blue-900 pl-[12vw]"
              >Read more</a
            >
          </div>
          <% }); %>
        </div>
      </div>
    </div>
  </body>
</html>
