<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Users</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900 p-4 text-white font-serif">
      <a href="/" class="text-zinc-500">Return to home</a>
      <div class="text-2xl mt-4 font-semibold">All Users</div>

      <div class="users flex flex-wrap p-5 pl-20 gap-5">
        <% if (users.length > 0) { %>
          <% users.forEach((user) => { %>
            <div class="user w-[20vw] bg-zinc-700 p-4 mt-4 rounded-lg">
              <div
                class="w-full h-52 rounded-lg mb-2"
                style="background-image: url('<%= user.image_url %>'); background-size: cover; background-position: center;"
              ></div>
              <div class="font-medium tracking-tight"><%= user.username %></div>
              <div class="tracking-tighter text-sm text-zinc-500">
                <%= user.email %>
              </div>
              <div class="links flex justify-between w-full mt-2 text-sm">
                <a href="/edit/<%= user._id %>" class="text-zinc-500 hover:text-zinc-300">Edit user</a>
                <a href="/delete/<%= user._id %>" class="text-red-500 hover:text-red-400">Delete user</a>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <div class="text-center text-zinc-400">No users found.</div>
        <% } %>
      </div>
    </div>
  </body>
</html> 
